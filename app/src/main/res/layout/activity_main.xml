<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:text="Cancel"
        android:textColor="#FFF0000D"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp"
        android:text="Done"
        android:textColor="#FFF0000D"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cancel"
        android:layout_centerInParent="true"
        android:text="Edit Profile"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/edit"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/avatar" />

    <TextView
        android:id="@+id/tvChange"
        style="@style/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avatar"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="@string/tv_login"
        />

    <TextView
        android:id="@+id/tell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvChange"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="13dp"
        android:text="Tell about your self"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/gioithieu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tell"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="13dp"
        android:inputType="textPersonName"
        android:text="Description"
        android:textSize="16dp" />

    <LinearLayout
        android:id="@+id/liner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gioithieu"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:weightSum="2">



            <TextView
                android:id="@+id/frist"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="13dp"
                android:layout_weight="1"
                android:text="Frist Name"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/Last"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="Last Name"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/liner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/liner1"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:id="@+id/fristname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/frist"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="13dp"
                android:inputType="textPersonName"
                android:text="Frist Name"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:id="@+id/lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/frist"
                android:layout_marginRight="13dp"
                android:inputType="textPersonName"
                android:text="Last Name"
                android:textSize="15dp" />
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/liner2"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="10dp"
        android:text="Address"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address"
        android:layout_marginLeft="11dp"
        android:layout_toLeftOf="@id/Change1"
        android:gravity="left"
        android:text="Phucprodn97@gmail.caaaaaaaaaaaaaaaaaahaaaaaaaaaas"
        android:textColor="#000000"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/Change1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/address"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="Change"
        android:textColor="#ff0000"
        android:textSize="15dp"

        />

    <TextView
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mail"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:text="Number Phone"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/phone2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone"
        android:layout_marginLeft="11dp"
        android:text="+0404201120"
        android:textColor="#000000"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/Change2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="Change"
        android:textColor="#ff0000"
        android:textSize="15dp"

        />

    <TextView
        android:id="@+id/emaill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone2"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="13dp"
        android:text="Email"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/emaill2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emaill"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="13dp"
        android:inputType="textPersonName"
        android:text="Email"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emaill2"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="13dp"
        android:text="Gender"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/gender2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gender"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="13dp"
        android:inputType="textPersonName"
        android:text="Gender"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/changepass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gender2"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:text="Change Password"
        android:textColor="#d90000"
        android:textSize="16dp"
        android:textStyle="bold" />

</RelativeLayout>